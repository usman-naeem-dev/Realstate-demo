{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["relay-server/**"],
    "buildCommand": "cd relay-server && npm install"
  },
  "deploy": {
    "startCommand": "cd relay-server && node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
